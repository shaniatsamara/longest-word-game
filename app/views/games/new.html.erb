<h1>New Game</h1>

<div class="d-flex">
<% @letters.shuffle.each do |letter| %>
  <h2><%= letter %></h2>
<% end %>
</div>

<form action="/score" method="POST">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @letters %>
  <input type="text" name="word" placeholder="What is the longest word you can find?">
  <input type="submit" value="Play">
</form>
